---
import { t, type Language } from '../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang = 'fr' } = Astro.props;
const tr = t(lang);

const socialLinks = [
  { href: '#', icon: 'github', hoverColor: 'hover:text-blue-500' },
  { href: '#', icon: 'gamepad-2', hoverColor: 'hover:text-[#5865F2]' },
  { href: '#', icon: 'twitter', hoverColor: 'hover:text-[#1DA1F2]' },
  { href: '#', icon: 'youtube', hoverColor: 'hover:text-red-500' },
];
---

<footer class="mt-16 pt-8 border-t border-white/5 w-full max-w-7xl mx-auto px-4 md:px-6">
  <div class="pb-6 flex flex-col sm:flex-row items-center justify-between gap-4">
    <!-- Left: Text Info -->
    <div class="flex flex-col sm:items-start items-center gap-1 text-sm text-muted-adaptive">
      <span>{tr('footer_credit')}</span>
      <span class="flex items-center gap-1 text-xs opacity-70">
        <i data-lucide="scale" class="w-3 h-3"></i>
        <span>{tr('footer_license')}</span>
      </span>
    </div>

    <!-- Right: Social Icons -->
    <div class="flex gap-5">
      {socialLinks.map((link) => (
        <a 
          href={link.href} 
          class={`text-muted-adaptive ${link.hoverColor} transition-colors`}
          aria-label={link.icon}
        >
          <i data-lucide={link.icon} class="w-5 h-5"></i>
        </a>
      ))}
    </div>
  </div>
</footer>
