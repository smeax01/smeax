---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, type Language } from '../i18n/translations';

const langParam = Astro.url.searchParams.get('lang') as Language | null;
const lang: Language = (langParam && (langParam === 'en' || langParam === 'fr')) ? langParam : 'fr';
const tr = t(lang);

const socialLinks = [
  { href: '#', icon: 'github', label: 'GitHub', hover: 'hover:text-white' },
  { href: '#', icon: 'gamepad-2', label: 'Discord', hover: 'hover:text-[#5865F2]' },
  { href: '#', icon: 'twitter', label: 'Twitter', hover: 'hover:text-[#1DA1F2]' },
  { href: '#', icon: 'youtube', label: 'YouTube', hover: 'hover:text-red-500' },
];

const contactInfo = [
  { icon: 'mail', title: tr('info_email'), value: 'contact@smeax.dev', href: 'mailto:contact@smeax.dev', color: 'bg-blue-500/10', iconColor: 'text-blue-400' },
  { icon: 'map-pin', title: tr('info_location'), value: tr('info_location_value'), color: 'bg-purple-500/10', iconColor: 'text-purple-400' },
  { icon: 'clock', title: tr('info_availability'), value: tr('info_availability_value'), color: 'bg-green-500/10', iconColor: 'text-green-400' },
];
---

<BaseLayout 
  title={`${tr('nav_contact')} - Smeax Portfolio`} 
  activePage="contact" 
  lang={lang}
  description={tr('contact_subtitle')}
>
  <section class="max-w-4xl mx-auto text-center mb-16 space-y-4">
    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-blue-500/20 bg-blue-500/10 text-blue-400 text-xs font-medium tracking-wide">
      <i data-lucide="mail" class="w-3.5 h-3.5"></i>
      <span class="uppercase">{tr('nav_contact')}</span>
    </div>
    
    <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-adaptive pb-2 leading-tight">
      {tr('contact_title')} <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-white">{tr('contact_highlight')}</span>
    </h1>
    
    <p class="text-muted-adaptive text-lg max-w-2xl mx-auto">
      {tr('contact_subtitle')}
    </p>
  </section>

  <section class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
    {/* Contact Form */}
    <div class="space-y-6">
      <div class="p-6 md:p-8 rounded-2xl card-bg">
        <h2 class="text-2xl font-bold text-adaptive mb-6">Envoyez un message</h2>
        
        <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-5">
          <div>
            <label for="name" class="block text-sm font-medium text-muted-adaptive mb-2">{tr('form_name')}</label>
            <input type="text" id="name" name="name" required
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-adaptive placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors"
              placeholder={tr('form_name_placeholder')}>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-muted-adaptive mb-2">{tr('form_email')}</label>
            <input type="email" id="email" name="email" required
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-adaptive placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors"
              placeholder={tr('form_email_placeholder')}>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-muted-adaptive mb-2">{tr('form_subject')}</label>
            <input type="text" id="subject" name="subject" required
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-adaptive placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors"
              placeholder={tr('form_subject_placeholder')}>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-muted-adaptive mb-2">{tr('form_message')}</label>
            <textarea id="message" name="message" rows="5" required
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-adaptive placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors resize-none"
              placeholder={tr('form_message_placeholder')}></textarea>
          </div>

          <button type="submit"
            class="w-full flex items-center justify-center gap-2 px-6 py-3 rounded-lg bg-blue-500 hover:bg-blue-600 text-white font-medium transition-all hover:scale-105">
            <i data-lucide="send" class="w-4 h-4"></i>
            <span>{tr('form_submit')}</span>
          </button>
        </form>
      </div>
    </div>

    {/* Contact Info */}
    <div class="space-y-6">
      <div class="p-6 md:p-8 rounded-2xl card-bg space-y-6">
        <h2 class="text-2xl font-bold text-adaptive">{tr('info_title')}</h2>
        
        {contactInfo.map(info => (
          <div class="flex items-start gap-4">
            <div class={`w-12 h-12 flex items-center justify-center rounded-xl shrink-0 ${info.color}`}>
              <i data-lucide={info.icon} class={`w-5 h-5 ${info.iconColor}`}></i>
            </div>
            <div>
              <h3 class="font-semibold text-adaptive mb-1">{info.title}</h3>
              {info.href ? (
                <a href={info.href} class="text-muted-adaptive hover:text-blue-500 transition-colors">{info.value}</a>
              ) : (
                <p class="text-muted-adaptive">{info.value}</p>
              )}
            </div>
          </div>
        ))}
      </div>

      {/* Social Links */}
      <div class="p-6 md:p-8 rounded-2xl card-bg">
        <h3 class="font-semibold text-white mb-4">{tr('social_title')}</h3>
        <div class="flex gap-3">
          {socialLinks.map(link => (
            <a 
              href={link.href} 
              class={`flex items-center justify-center w-10 h-10 rounded-lg bg-white/5 hover:bg-white/10 text-gray-400 ${link.hover} transition-colors`}
              aria-label={link.label}
            >
              <i data-lucide={link.icon} class="w-5 h-5"></i>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
